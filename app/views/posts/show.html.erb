<div class="row">
  <h2>
    <%= @post.title %>
    <small>
      by <%= @post.author_name %>
    </small>
  </h2>

  <p class="text-muted"><small><%= @post.created_at.in_time_zone('Sydney').strftime("%d/%m/%Y at %l:%M %p") %></small></p>

  <p>
    <%= @post.body %>
  </p>

  <p><strong>Actions</strong></p>

  <p>
    <%= link_to 'Destroy', @post, method: :delete, confirm: 'Are you sure?', class: 'btn btn-danger' %>
  </p>
</div>
